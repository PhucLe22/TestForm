    script.
      const form = document.getElementById('linkForm');
      const result = document.getElementById('result');
      form.addEventListener('submit', e => {
        e.preventDefault();
        const method = document.getElementById('method').value;
        const url = document.getElementById('url').value.trim();

        if (!url) {
          result.innerHTML = '<span style="color:red;">‚ö†Ô∏è Vui l√≤ng nh·∫≠p URL</span>';
          return;
        }

        const fullLink = `http://localhost:3000/send?method=${encodeURIComponent(method)}&url=${encodeURIComponent(url)}`;
        result.innerHTML = `
          ‚úÖ Link ƒë√£ t·∫°o:<br>
          <a href="${fullLink}" target="_blank">${fullLink}</a>
        `;
      });
